<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/bg_login"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/teamCreation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="Create a Team"
        android:fontFamily="@font/pokemon_solid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/teamSelector"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pokemon_solid"
        android:layout_marginTop="10dp"
        android:text="My Pokemon Teams"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamCreation" />

    <Button
        android:id="@+id/itemButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pokemon_solid"

        android:text="Items"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamSelector" />

    <Button
        android:id="@+id/topPokemonButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Top Used Pokemon"
        android:fontFamily="@font/pokemon_solid"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemButton" />

    <Button
        android:id="@+id/friends"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pokemon_solid"
        android:layout_marginTop="10dp"
        android:text="My Friends"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topPokemonButton" />

    <Button
        android:id="@+id/chat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Chat"
        android:fontFamily="@font/pokemon_solid"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/friends" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageCreateTeam"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="108dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/pokeball"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/teamCreation"
         />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageMyTeams"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="166dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/pokemon_storage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/teamSelector"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageItems"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="56dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/items"
        app:layout_constraintTop_toBottomOf="@id/imageCreateTeam"
        app:layout_constraintRight_toLeftOf="@id/itemButton" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageTopUsed"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/charizard"
        app:layout_constraintTop_toBottomOf="@id/imageMyTeams"
        app:layout_constraintLeft_toRightOf="@id/teamSelector" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageFriends"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="56dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/pokemon_trainers"
        app:layout_constraintTop_toBottomOf="@id/imageItems"
        app:layout_constraintRight_toLeftOf="@id/friends"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageChat"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_chat"
        app:layout_constraintTop_toBottomOf="@id/imageTopUsed"
        app:layout_constraintLeft_toRightOf="@id/chat"/>


</androidx.constraintlayout.widget.ConstraintLayout>