<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".PokemonActivities.RecommendPokemon">

    <Spinner
        android:id="@+id/tierSpinnerRecommended"
        android:layout_width="408dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        app:layout_constraintVertical_bias="0.0" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recommendRV"
        android:layout_width="match_parent"
        android:layout_height="513dp"
        android:layout_below="@+id/tierSpinnerRecommended"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/latoblack" />

    <Button
        android:id="@+id/recommendedSpinnerButton"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:fontFamily="@font/pokemon_solid"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="231dp"
        android:layout_marginLeft="231dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="523dp"
        android:text="Recommended" />


</RelativeLayout>